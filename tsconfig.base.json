{
    "compilerOptions": {
        "module": "ESNext",        // ✅ must be ESNext, ES2022, or ES6 — NOT "CommonJS"
        "target": "ES2022",        // ✅ or ESNext
        "outDir": "build",
        "sourceMap": true,
        "inlineSources": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ],
    },
}