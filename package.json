{
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:client": "webpack --mode=production --config webpack.config.ts --require ts-node/register",
    "build:server": "tsc -p tsconfig.server.json",
    "build": "npm run build:client && npm run build:server",
    "dev:client": "webpack --mode=development --config webpack.config.ts --watch --require ts-node/register",
    "dev:server": "tsc -w -p tsconfig.server.json",
    "dev": "concurrently \"npm:dev:client\" \"npm:dev:server\" \"nodemon build/server.js\"",
    "start": "npm run build && node build/server.js",
    "deploy": "npm run start"
  },
