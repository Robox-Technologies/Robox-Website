{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": true,
        "module": "es2022",
        "sourceMap": true,
        "target": "ES2022",  // Change this from "es5" to "ES2022"
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules",
        "dist",
        "webpack.config.js",
        "src",
        "build",
    ]
}