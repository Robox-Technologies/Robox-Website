{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "react-jsx",
      "sourceMap": true,
      "strictPropertyInitialization": false,
      "inlineSources": true,
      "strict": true,
      "esModuleInterop": true,
      "typeRoots": ["./node_modules/@types", "./src/@types"],
      "skipLibCheck": true
    },
    "include": [
      "./src",             // frontend code
      "./src/@types/**/*"        // <-- your svg.d.ts lives here
    ]
}